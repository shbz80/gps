<launch>
    <param name="GPSYumiPlugin/type" value="gps_agent_pkg/GPSYumiPlugin" />
    <!-- rosparam command="load" file="$(find gps_agent_pkg)/launch/pr2_head_controller.yaml" -->
    <rosparam command="load" file="$(find gps_agent_pkg)/launch/yumi_left_controller.yaml" />

    <!-- controller params -->
    <param name="GPSYumiPlugin/root_name" value="yumi_base_link" />
    <!-- TODO original value was tool_frame-->
    <param name="GPSYumiPlugin/active_tip_name" value="gripper_l_base" />
    <param name="GPSYumiPlugin/passive_tip_name" value="gripper_r_base" />


    <!--  ##############################################################-->
    <!-- TODO: urdf is loaded into local parameter space for controller access-->
    <!-- a proper way has to found to do this-->
    <!--  Hardware interfaces for the joints and grippers -->
      <arg name="arms_hardware_interface" default="EffortJointInterface"/>
      <arg name="grippers_hardware_interface" default="EffortJointInterface"/>

    <arg name="yumi_setup" default="default"/>
    <param name="GPSYumiPlugin/robot_description" command="$(find xacro)/xacro.py '$(find yumi_description)/urdf/yumiABB.urdf.xacro' arms_interface:=$(arg arms_hardware_interface) grippers_interface:=$(arg grippers_hardware_interface) yumi_setup:=$(arg yumi_setup)" />
    <!--  ##############################################################-->

    <!-- kalman filter matrices -->
    <!-- TODO this may be required-->
    <param name="GPSYumiPlugin/encoder_filter_params" textfile="$(find gps_agent_pkg)/encoder_filter_params.txt"/>

    <!-- Spawn Controller -->
    <node name="controller_spawner"
         pkg="controller_manager" type="controller_manager" output="screen"
         args="spawn GPSYumiPlugin" />

</launch>
